<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieSavedList">

    <ListView
            android:layout_width="368dp"
            android:layout_height="425dp"
            android:id="@+id/movieFavList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/movieFavlistTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Favorite Movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="143dp" android:id="@+id/movieFavlistTitle"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="301dp"
            android:layout_height="22dp"
            tools:layout_editor_absoluteY="66dp" tools:layout_editor_absoluteX="42dp" android:id="@+id/progressBar2"
            android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>