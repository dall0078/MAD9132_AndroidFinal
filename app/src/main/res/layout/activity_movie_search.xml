<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieSearch">

    <android.support.v7.widget.Toolbar
            android:layout_width="367dp"
            android:layout_height="45dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="9dp" android:id="@+id/movieSearchToolbar"/>
    <ListView
            android:layout_width="368dp"
            android:layout_height="347dp" tools:layout_editor_absoluteY="156dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/movieSearchListView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Movie Title"
            android:ems="10"
            tools:layout_editor_absoluteY="76dp" tools:layout_editor_absoluteX="9dp"
            android:id="@+id/movieSearchField"/>
</android.support.constraint.ConstraintLayout>